#!/bin/bash

if type update-alternatives 2>/dev/null >&1; then
    # Remove previous link if it doesn't use update-alternatives
    if [ -L '/usr/bin/routex' -a -e '/usr/bin/routex' -a "`readlink '/usr/bin/routex'`" != '/etc/alternatives/routex' ]; then
        rm -f '/usr/bin/routex'
    fi
    update-alternatives --install '/usr/bin/routex' 'routex' '/opt/RouteX/routex' 100 || ln -sf '/opt/RouteX/routex' '/usr/bin/routex'
else
    ln -sf '/opt/RouteX/routex' '/usr/bin/routex'
fi

sed -i 's/Name=routex/Name=RouteX/' '/usr/share/applications/routex.desktop'

chmod 4755 '/opt/RouteX/chrome-sandbox' || true
chmod +sx /opt/RouteX/resources/sidecar/mihomo
chmod +sx /opt/RouteX/resources/sidecar/mihomo-alpha

if [ -d '/opt/RouteX/resources/files/sub-store-frontend' ]; then
    chmod -R go-w '/opt/RouteX/resources/files/sub-store-frontend' 2>/dev/null || true
fi

if hash update-mime-database 2>/dev/null; then
    update-mime-database /usr/share/mime || true
fi

if hash update-desktop-database 2>/dev/null; then
    update-desktop-database /usr/share/applications || true
fi
